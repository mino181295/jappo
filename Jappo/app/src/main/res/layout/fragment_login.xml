<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/rounded_box"
    android:orientation="vertical">

    <EditText
        android:hint="@string/email"
        android:drawableStart="@drawable/ic_email"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:drawablePadding="14dp"
        android:textColorHint="@color/lightbrown"
        android:id="@+id/login_mail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <EditText
        android:hint="@string/password"
        android:drawableStart="@drawable/ic_textbox_password"
        android:drawablePadding="14dp"
        android:textColorHint="@color/lightbrown"
        android:id="@+id/login_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/login_mail_text"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/login_password_text"
        android:layout_alignTop="@id/login_mail_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>
