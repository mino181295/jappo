<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/highscores_position"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle_textview"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:src="@drawable/test"
        android:text="12"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/completed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Matteo Minardi"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/highscores_position"
        android:layout_toEndOf="@id/highscores_position"
        android:layout_above="@id/completed_time_label" />

    <TextView
        android:id="@+id/completed_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:text="22"
        android:textColor="@color/colorAccent"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/completed_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/highscores_position"
        android:layout_alignStart="@+id/completed_name"
        android:gravity="center_vertical"
        android:text="Ultimo ordine" />

    <TextView
        android:id="@+id/completed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/completed_time_label"
        android:layout_alignBottom="@id/completed_time_label"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/completed_time_label"
        android:gravity="center_vertical"
        android:text="22/07/2017" />
</RelativeLayout>