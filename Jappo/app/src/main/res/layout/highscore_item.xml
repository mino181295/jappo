<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/highscores_position"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle_textview"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:src="@drawable/test"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/highscore_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/highscores_position"
        android:layout_toEndOf="@id/highscores_position"
        android:layout_above="@id/highscore_time_label" />

    <TextView
        android:id="@+id/highscore_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:text="22"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/highscore_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/highscores_position"
        android:layout_alignStart="@+id/highscore_name"
        android:gravity="center_vertical"
        android:textColor="@color/fab_material_blue_grey_900"
        android:text="Ultimo ordine" />

    <TextView
        android:id="@+id/highscores_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/highscore_time_label"
        android:layout_alignBottom="@id/highscore_time_label"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/highscore_time_label"
        android:gravity="center_vertical"
        android:textColor="@color/fab_material_blue_grey_900" />
</RelativeLayout>